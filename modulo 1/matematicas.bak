\section*{Solución Pregunta 4 (MAT1630)}
%-------------------------------------------------------------------------------
\textbf{Problema:} Volumen del cuerpo definido en coordenadas cilíndricas.

\paragraph{Paso 1: Configurar la integral de volumen.}
En coordenadas cilíndricas, el diferencial de volumen es $dV = r \, dz \, dr \, d\theta$. El volumen total es la integral triple sobre la región.
$$ V = \int_{0}^{2\pi} \int_{0}^{2+\sin(4\theta)} \int_{0}^{1} r \, dz \, dr \, d\theta $$
\paragraph{Paso 2: Evaluar la integral interior (respecto a z).}
$$ \int_{0}^{1} r \, dz = r[z]_0^1 = r $$
La integral se convierte en:
$$ V = \int_{0}^{2\pi} \int_{0}^{2+\sin(4\theta)} r \, dr \, d\theta $$
\paragraph{Paso 3: Evaluar la integral intermedia (respecto a r).}
$$ \int_{0}^{2+\sin(4\theta)} r \, dr = \left[\frac{r^2}{2}\right]_0^{2+\sin(4\theta)} = \frac{1}{2}(2+\sin(4\theta))^2 $$
\paragraph{Paso 4: Evaluar la integral exterior (respecto a $\theta$).}
\begin{align*}
V &= \frac{1}{2} \int_{0}^{2\pi} (4 + 4\sin(4\theta) + \sin^2(4\theta)) \, d\theta \\
&= \frac{1}{2} \int_{0}^{2\pi} \left(4 + 4\sin(4\theta) + \frac{1-\cos(8\theta)}{2}\right) \, d\theta \\
&= \frac{1}{2} \left[ 4\theta - \cos(4\theta) + \frac{\theta}{2} - \frac{\sin(8\theta)}{16} \right]_0^{2\pi} \\
&= \frac{1}{2} \left[ \left( 8\pi - 1 + \pi - 0 \right) - (0 - 1 + 0 - 0) \right] = \frac{1}{2}(9\pi) = \frac{9\pi}{2}
\end{align*}

\textbf{Respuesta Correcta: c) $9\pi/2$}


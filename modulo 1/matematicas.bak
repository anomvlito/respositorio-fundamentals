\section*{Cálculo III (MAT1630): Cálculo Multivariable}
%-------------------------------------------------------------------------------

\subsection*{Derivadas Parciales y Direccionales}
\paragraph{Gradiente de una función $f(x,y)$}
$$ \nabla f = \left\langle \frac{\partial f}{\partial x}, \frac{\partial f}{\partial y} \right\rangle $$
El gradiente apunta en la dirección de máximo crecimiento de la función.

\paragraph{Derivada Direccional} Es la tasa de cambio de $f$ en la dirección de un vector \textbf{unitario} $\mathbf{u}$.
$$ D_{\mathbf{u}}f(x,y) = \nabla f(x,y) \cdot \mathbf{u} $$

\subsection*{Integrales Múltiples}
\paragraph{Volumen bajo una Superficie}
$$ V = \iint_R z(x,y) \, dA $$
\paragraph{Coordenadas Cilíndricas} $(x,y,z) \to (r, \theta, z)$
$$ x = r\cos\theta, \quad y = r\sin\theta, \quad z=z, \quad dV = r \, dz \, dr \, d\theta $$


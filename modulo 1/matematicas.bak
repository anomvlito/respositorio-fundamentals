\section*{Cálculo II (MAT1620): Integrales y Series}
%-------------------------------------------------------------------------------

\subsection*{Aplicaciones de la Integral Definida}
\paragraph{Área entre Curvas}
$$
A = \int_{a}^{b} (\text{función superior} - \text{función inferior}) \, dx
$$
\paragraph{Momentos de una Región Plana} (densidad $\rho=1$)
\begin{itemize}
    \item Momento respecto al eje X: $M_x = \int_{a}^{b} \frac{1}{2} ([f(x)]^2 - [g(x)]^2) \, dx$
    \item Momento respecto al eje Y: $M_y = \int_{a}^{b} x (f(x) - g(x)) \, dx$
\end{itemize}

\subsection*{Convergencia de Series e Integrales}
\paragraph{Criterio de la Razón (para series $\sum a_n$)}
$$
L = \lim_{n \to \infty} \left| \frac{a_{n+1}}{a_n} \right| \implies 
\begin{cases} 
L < 1 & \text{converge absolutamente} \\
L > 1 & \text{diverge} \\
L = 1 & \text{el criterio no decide}
\end{cases}
$$
\paragraph{Criterio de Comparación en el Límite (para series e integrales impropias)}
Si $\lim_{n \to \infty} \frac{a_n}{b_n} = c$ con $c > 0$ y finito, entonces $\sum a_n$ y $\sum b_n$ ambas convergen o ambas divergen. Funciona de forma análoga para integrales.

\subsection*{Geometría en el Espacio}
\paragraph{Ecuación Vectorial de la Recta} Pasa por $P_0$ con vector director $\mathbf{v}$.
$$
\mathbf{r}(t) = \mathbf{r}_0 + t\mathbf{v}
$$
\paragraph{Ecuación Cartesiana del Plano} Pasa por $P_0$ con vector normal $\mathbf{n} = \langle a, b, c \rangle$.
$$
a(x-x_0) + b(y-y_0) + c(z-z_0) = 0
$$


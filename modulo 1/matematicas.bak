\section*{Solución Pregunta 3 (MAT1630)}
%-------------------------------------------------------------------------------
\textbf{Problema:} Derivada direccional de $f(x,y)=x^y$ en $(1,2)$ en la dirección de $\mathbf{v}=(1,1)$.

\paragraph{Paso 1: Calcular el gradiente de f.}
$$ \nabla f = \left\langle \frac{\partial f}{\partial x}, \frac{\partial f}{\partial y} \right\rangle = \langle yx^{y-1}, x^y \ln(x) \rangle $$
Evaluamos en el punto $(1,2)$:
$$ \nabla f(1,2) = \langle 2(1)^{2-1}, 1^2 \ln(1) \rangle = \langle 2, 1^2 \cdot 0 \rangle = \langle 2, 0 \rangle $$
\paragraph{Paso 2: Normalizar el vector de dirección.}
El vector es $\mathbf{v} = \langle 1, 1 \rangle$. Su magnitud es $||\mathbf{v}|| = \sqrt{1^2 + 1^2} = \sqrt{2}$.
El vector unitario es $\mathbf{u} = \frac{\mathbf{v}}{||\mathbf{v}||} = \left\langle \frac{1}{\sqrt{2}}, \frac{1}{\sqrt{2}} \right\rangle$.
\paragraph{Paso 3: Calcular el producto punto.}
La derivada direccional es $D_{\mathbf{u}}f = \nabla f \cdot \mathbf{u}$.
\begin{align*}
D_{\mathbf{u}}f(1, 2) &= \langle 2, 0 \rangle \cdot \left\langle \frac{1}{\sqrt{2}}, \frac{1}{\sqrt{2}} \right\rangle \\
&= (2)\frac{1}{\sqrt{2}} + (0)\frac{1}{\sqrt{2}} = \frac{2}{\sqrt{2}} = \sqrt{2}
\end{align*}

\textbf{Respuesta Correcta: c) $\sqrt{2}$}

